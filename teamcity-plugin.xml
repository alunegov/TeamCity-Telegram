<?xml version="1.0" encoding="UTF-8"?>
<teamcity-plugin xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:shemas-jetbrains-com:teamcity-plugin-v1-xml">
    <info>
        <name>TelegramNotifier</name> <!-- the name of plugin used in teamcity -->
        <display-name>Telegram Notifier</display-name>
        <version>1.0-SNAPSHOT</version>
        <description>Post build notifications to Telegram</description>
        <vendor>
            <name>alunegov</name>
        </vendor>
    </info>
    <deployment use-separate-classloader="true" /> <!-- load server plugin's classes in separate classloader-->
</teamcity-plugin>